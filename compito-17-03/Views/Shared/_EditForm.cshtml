@model EditViewModel

<form id="editForm">
    <input hidden asp-for="Id" />
    <div class="mb-3">
        <label for="name" class="form-label">Nome</label>
        <input id="name" type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mb-3">
        <label for="cognome" class="form-label">Cognome</label>
        <textarea id="cognome" class="form-control" asp-for="Cognome"></textarea>
    </div>
    <div class="mb-3">
        <label for="dataNascita" class="form-label">Data di nascita</label>
        <input id="dataNascita" type="date" class="form-control" asp-for="DataNascita" />
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input id="email" type="email" class="form-control" asp-for="Email" />
    </div>
    <button class="btn btn-success" type="button" onclick="sendEditForm()">Save</button>
</form>
